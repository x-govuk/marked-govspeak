{
  "name": "@x-govuk/marked-govspeak",
  "version": "0.1.0",
  "description": "Govspeak Markdown extensions for Marked.",
  "keywords": [
    "govuk",
    "govspeak",
    "markdown",
    "marked"
  ],
  "homepage": "https://github.com/x-govuk/marked-govspeak#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/marked-govspeak/issues"
  },
  "license": "MIT",
  "files": [
    "lib",
    "govspeak"
  ],
  "main": "index.js",
  "sass": "govspeak/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/marked-govspeak.git"
  },
  "scripts": {
    "lint": "prettier . --check && standard && stylelint 'govspeak/**/*.scss'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "marked": "^6.0.0"
  },
  "devDependencies": {
    "ava": "^5.0.0",
    "c8": "^8.0.0",
    "prettier": "^3.0.1",
    "standard": "^17.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-gds": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "c8": {
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "embeddedLanguageFormatting": "off",
          "singleQuote": false
        }
      },
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
