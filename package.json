{
  "name": "@x-govuk/marked-govspeak",
  "version": "0.2.0",
  "description": "Govspeak Markdown extensions for Marked.",
  "keywords": [
    "govuk",
    "govspeak",
    "markdown",
    "marked"
  ],
  "homepage": "https://github.com/x-govuk/marked-govspeak#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/marked-govspeak/issues"
  },
  "license": "MIT",
  "files": [
    "lib",
    "govspeak"
  ],
  "main": "index.js",
  "sass": "govspeak/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/marked-govspeak.git"
  },
  "scripts": {
    "prelint": "prettier . --check",
    "lint": "eslint && stylelint 'govspeak/**/*.scss'",
    "test": "node --test",
    "coverage": "node --test --experimental-test-coverage",
    "release": "np"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "np": "^9.2.0",
    "prettier": "^3.0.1",
    "stylelint": "^15.0.0",
    "stylelint-config-gds": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "embeddedLanguageFormatting": "off",
          "singleQuote": false
        }
      },
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "plugin:jsdoc/recommended-typescript-flavor",
      "standard",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
